{% set layout = "ClarolineCoreBundle:Workspace:layout.html.twig" %}

{% if isDesktop() %}
    {% set layout = "ClarolineCoreBundle:Desktop:layout.html.twig" %}
{% endif %}

{% extends layout %}

{% block meta %}
    {{ parent() }}
    <base href="{{ url('icap_wiki_view', { wikiId: _resource.id}) }}/" />
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('packages/angular-loading-bar/build/loading-bar.min.css') }}" />

    <link rel='stylesheet' type='text/css' href='{{ asset('bundles/icapwiki/css/contribution.css') }}'/>
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/icapwiki/css/style.css') }}"/>
{% endblock %}

{% block content %}

    <wiki-messages></wiki-messages>

    <ng-view></ng-view>

    {% block wiki_buttons %}
    {% endblock %}
    
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ hotAsset('dist/claroline-distribution-plugin-wiki-list.js') }}"></script>
    <script src="{{ url('bazinga_jstranslation_js', { 'domain': 'icap_wiki' }) }}"></script>
{% endblock %}
