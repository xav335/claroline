{% if log.details.contribution is defined %}
    <h4>{{ ('log_created_contribution')|trans({}, 'log') }}</h4>

    <dl class="dl-horizontal">
        <dt>{{ ('log_section_title')|trans({}, 'log') }}</dt>
        <dd>{{ log.details.contribution.title }}</dd>
        <dt>{{ ('log_section_text')|trans({}, 'log') }}</dt>
        <dd>{{ log.details.contribution.text|raw }}</dd>
    </dl>
{% endif %}