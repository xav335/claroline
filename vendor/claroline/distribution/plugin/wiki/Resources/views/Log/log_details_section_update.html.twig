{% if log.details.section is defined %}
    {% if log.getDetails().section.changeSet is defined and log.getDetails().section.changeSet|length > 0 %}
    <div>
        <h4>{{ ('log_change_set')|trans({}, 'log') }}</h4>
        <h5>{{ ('log_old_values')|trans({}, 'log') }}</h5>
        {% set changeSet = log.getDetails().section.changeSet %}
        <dl class="dl-horizontal">
            {% for key, values in changeSet %}
                <dt>{{ key|trans({}, 'log') }}</dt>
                {% if values[0] is null %}
                    <dd>...</dd>
                {% elseif values[0] is sameas(true) %}
                    <dd>{{ "yes"|trans({}, 'log') }}</dd>
                {% elseif values[0] is sameas(false) %}
                    <dd>{{ "no"|trans({}, 'log') }}</dd>
                {% else %}
                    <dd>{{ values[0]|raw }}</dd>
                {% endif %}
            {% endfor %}
        </dl>
        <h5>{{ ('log_new_values')|trans({}, 'log') }}</h5>
        <dl class="dl-horizontal">
            {% for key, values in changeSet %}
                <dt>{{ key|trans({}, 'log') }}</dt>
                {% if values[1] is null %}
                    <dd>...</dd>
                {% elseif values[1] is sameas(true) %}
                    <dd>{{ "yes"|trans({}, 'log') }}</dd>
                {% elseif values[1] is sameas(false) %}
                    <dd>{{ "no"|trans({}, 'log') }}</dd>
                {% else %}
                    <dd>{{ values[1]|raw }}</dd>
                {% endif %}
            {% endfor %}
        </dl>
    </div>
    {% endif %}
{% endif %}