{# Ecran de l'espace personnel. #}
{# Affichage de l'icône suivant la valeur de l'accusé de réception. #}

{# Ce sont les valeurs d'AR qui doivent afficher un triangle rouge #}
{% set redTriangle = [2, 4, 5, 6] %}

{# 0 : pas d'accusé de réception #}
{% if value == 0 or value == 1 %}
	{#225 : changement de font-awesome #}
    <span class="fa fa-minus" data-toggle="tooltip" data-placement="top" data-original-title="{{ 'No return recept'|trans({}, 'innova_collecticiel') }}"> </span>
{% endif %}
{# 2 : doublon #}
{% if value == 2 %}
	<div class="short-div">
	    <span class="fa fa-hand-paper-o display-red" data-toggle="tooltip" data-placement="top" data-original-title="{{ 'Doubloon'|trans({}, 'innova_collecticiel') }}"> </span>
	</div>
{% endif %}
{# 3 : document bien reçu #}
{% if value == 3 %}
    <span class="fa fa-thumbs-o-up" data-toggle="tooltip" data-placement="top" data-original-title="{{ 'Document received'|trans({},'innova_collecticiel') }}"> </span>
{% endif %}
{# 4 : document illisible #}
{% if value == 4 %}
	<div class="short-div">
	    <span class="fa fa-hand-paper-o display-red" data-toggle="tooltip" data-placement="top" data-original-title="{{ 'Document unreadable'|trans({}, 'innova_collecticiel') }}"> </span>
	</div>
{% endif %}
{# 5 : document incomplet #}
{% if value == 5 %}
	<div class="short-div">
	    <span class="fa fa-hand-paper-o display-red" data-toggle="tooltip" data-placement="top" data-original-title="{{ 'Incomplete document'|trans({}, 'innova_collecticiel') }}"> </span>
	</div>
{% endif %}
{# 6 : erreur de document #}
{% if value == 6 %}
	<div class="short-div">
		<span class="fa fa-hand-paper-o display-red" data-toggle="tooltip" data-placement="top" data-original-title="{{ 'Error document'|trans({}, 'innova_collecticiel') }}"></span>
	</div>
{% endif %}
{# Affichage du triangle rouge au cas où #}
{% if value in redTriangle %}
	<br />
	<span class="fa fa-exclamation-triangle display-red"></span>
{% endif %}
