<div class='panel-group' id="rss-flux-{{ widgetId }}">
    {% for item in rss %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <span class="accordion-toggle pointer-hand" data-toggle="collapse" data-parent="#rss-flux-{{ widgetId }}" href="#rss-flux-{{ widgetId ~ loop.index }}">
                        {{ item.getTitle() }}
                    </span>
                </h3>
            </div>
            <div class="panel-body collapse" id="rss-flux-{{ widgetId ~ loop.index }}">
                <p>{{ item.getDescription()|raw }}</p>
                <p><a href="{{ item.getLink() }}">{{ 'Read more' | trans({}, 'rss_reader') }}</a></p>
                <p class="text-muted">{{ item.getDate() }}</p>
            </div>
        </div>
    {% endfor %}
</div>
