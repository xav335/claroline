<div id="modal-chat-room-configure-form" 
     class="modal-dialog" 
     role="dialog" 
     aria-labelledby="modalLabel" 
     aria-hidden="true"
>
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                &times;
            </button>
            <h3 class="modal-title">
                {{ 'chat_room_configuration'|trans({}, 'chat') }}
                <br>
                <small>{{ chatRoom.getRoomName() ~ '@' ~ xmppMucHost }}</small>
            </h3>
        </div>
        <div class="modal-body">
            <form id="chat-room-configure-form"
                  action="{{ path('claro_chat_room_configure', {'chatRoom': chatRoom.getId()}) }}"
                  method="POST"
                  {{ form_enctype(form) }}
            > 
                {{ form_widget(form) }}
            </form>
        </div>
        <div class="modal-footer">
            <span class="btn btn-default" data-dismiss="modal">
                {{ 'cancel'|trans({}, 'platform') }}
            </span>
            <button type="submit" id='configure-btn' class="btn btn-primary" data-dismiss="modal">
                {{ 'ok'|trans({}, 'platform') }}
            </button>
        </div>
    </div>
</div>