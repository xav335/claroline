{% extends "ClarolineCoreBundle:Administration:layout.html.twig" %}

{% block title %}
    {{ 
        parent() ~
        ' - ' ~
        'configuration' | trans({}, 'platform')
    }}
{% endblock %}

{% block breadcrumb %}
    {{
        macros.breadcrumbs([
            {
                'icon': 'fa fa-cog',
                'name': 'administration'|trans({}, 'platform'),
                'href': path('claro_admin_index')
            },
            {
                'name': 'formalibre_support_management_tool'|trans({}, 'tools'),
                'href': path('formalibre_admin_support_index')
            },
            {
                'name': 'configuration'|trans({}, 'platform'),
                'href': ''
            }
        ])
    }}
{% endblock %}

{% block section_content %}
    <div class="panel-heading">
        <h3 class="panel-title">
            {{ 'configuration'|trans({}, 'platform') }}
        </h3>
    </div>
    <div class="list-group">
        <a class="list-group-item"
           href="{{ path('formalibre_admin_support_type_management') }}"
        >
            {{ 'support_type_management'|trans({}, 'support') }}
        </a>
        <a class="list-group-item"
           href="{{ path('formalibre_admin_support_status_management') }}"
        >
            {{ 'support_status_management'|trans({}, 'support') }}
        </a>
        <a class="list-group-item"
           href="{{ path('formalibre_admin_support_contacts_management') }}"
        >
            <i class="fa fa-users"></i>
            {{ 'support_contacts_management'|trans({}, 'support') }}
        </a>
    </div>
{% endblock %}