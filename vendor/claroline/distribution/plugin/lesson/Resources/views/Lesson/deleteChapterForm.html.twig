{% import 'ClarolineCoreBundle::macros.html.twig' as macros %}

<form id='deleteChapterForm' method="POST" action="{{ path('icap_lesson_delete_chapter', { 'resourceId': lesson.id, 'chapterId': chapter.id }) }}" class="form-horizontal">
    <fieldset>
        <div class="control-group">
            <div class="delete_chapter_title">
                {{ chapter.title }}
            </div>
            <div class="control-group">
                {% if form.deletechildren is defined %}
                    {{ form_widget(form.deletechildren) }}
                    <label class="control-label" for="icap_lesson_deletechaptertype_children">{{ 'delete_also_children'|trans({}, 'icap_lesson') }}</label>
                    <br/>
                    {{ 'delete_also_children_more'|trans({}, 'icap_lesson') }}
                {% endif %}
            </div>
            <div class='delete_chapter_warning'>
                {{ 'delete_warning'|trans({}, 'icap_lesson') }}
            </div>
        </div>
        {{ form_rest(form) }}
    </fieldset>
    <input type="submit" value="{% trans %}Confirmer{% endtrans %}" class="btn btn-primary" />
    <a class="btn btn-default cancel-btn" href="{{ path('icap_lesson_chapter', { 'resourceId': lesson.id, 'chapterId': chapter.slug }) }}">
       {{ 'Cancel'|trans({}, 'icap_lesson') }}
    </a>
</form>
