{% twig_js name = 'GroupObjectiveRow' %}

{% set type = type is defined ? type : 'group' %}
{% set path = path is defined ? path : '' %}
{% set indent = indent is defined ? indent : 0 %}

<tr data-id="{{ id }}"
    data-type="{{ type }}"
    data-path="{{ path }}">
    <td class="{{ type }}-name level-{{ indent }}">
        {{ name }}
    </td>
    <td class="large-cell">
        {{ type == 'objective' ? framework : '-' }}
    </td>
    <td class="x-small-cell">
        {% if type == 'group' %}
            <a href="#" class="expand">
                <i class="fa fa-search-plus"></i>
            </a>
        {% else %}
            -
        {% endif %}
    </td>
    <td class="x-small-cell">
        {% if type == 'objective' %}
            -
        {% else %}
            <a href="{{ path('hevinci_objective_group_users', { id: id }) }}"
               data-toggle="tooltip"
               data-placement="left"
               title="{{ 'users'|trans({}, 'platform') }}">
                <i class="fa fa-user"></i>
            </a>
        {% endif %}
    </td>
    <td class="x-small-cell">
        {% if type == 'objective' %}
            <a href="#"
               class="remove"
               data-toggle="tooltip"
               data-placement="left"
               title="{{ 'delete'|trans({}, 'platform') }}">
                <i class="fa fa-remove"></i>
            </a>
        {% else %}
            -
        {% endif %}
    </td>
</tr>