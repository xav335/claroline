{% extends 'HeVinciCompetencyBundle:Competency:frameworkLayout.html.twig' %}

{% set activeTab = 'framework' %}

{% block tabContent %}
    <ul class="framework">
        {%
            include 'HeVinciCompetencyBundle:Competency:competencyItem.html.twig'
            with {
                competency: framework,
                displayUntil: 1
            }
        %}
    </ul>
{% endblock %}

{% block panelFooter %}
    <button id="control-expansion"
            data-status="collapsed"
            class="btn btn-default">
        {{ 'expand_all'|trans({}, 'competency') }}
    </button>
{% endblock %}