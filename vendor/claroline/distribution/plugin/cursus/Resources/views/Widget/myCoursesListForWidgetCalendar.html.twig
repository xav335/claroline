{% if search != '' %}
    <div class="alert alert-info">
        {{ 'results_for_search_on'|trans({}, 'platform') }} :
        "{{ search }}"
    </div>
{% endif %}

<div class="row">
    <div class="col-md-4 pull-right">
        <div class="input-group margin-bottom-md">
            <input class="form-control search-course"
                   type="text"
                   id="search-course-input"
                   placeholder="{{ 'search'|trans({}, 'platform') }}"
                   value="{{ search }}"
            >
            <span class="input-group-btn">
                <button class="filter btn btn-default search-course-btn"
                        type="button"
                        id="search-course-btn"
                >
                    <i class="fa fa-search"></i>
                </button>
            </span>
        </div>
    </div>
    <div class="btn-group pull-right">
        <button id="list-view-button"
                class="btn btn-default"
                data-toggle="tooltip"
                data-placement="top"
                data-container="#courses-list-{{ widgetInstance.getId() }}"
                title="{{ 'list_view'|trans({}, 'cursus') }}"
        >
            <i class="fa fa-list"></i>
        </button>
        <button id="chronologic-view-button"
                class="btn btn-default"
                data-toggle="tooltip"
                data-placement="top"
                data-container="#courses-list-{{ widgetInstance.getId() }}"
                title="{{ 'chronologic_view'|trans({}, 'cursus') }}"
        >
            <i class="fa fa-hourglass-o"></i>
        </button>
    </div>
    <div id="courses-widget-calendar-{{ widgetInstance.getId() }}" class="col-md-12"></div>
</div>

{% block javascripts %}
    <script src="{{ asset('bundles/bazingajstranslation/js/translator.min.js') }}"></script>
    {% javascripts debug=false
        'js/translations/agenda/*.js'
        'js/translations/cursus/*.js'
        'js/translations/tools/*.js'
        'js/translations/platform/*.js'
        %}<script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script>
        window['sessions_' + {{ widgetInstance.getId() }}] = {{ sessions|json_encode|raw }}
        window['editable-sessions_' + {{ widgetInstance.getId() }}] = {{ editableSessions|json_encode|raw }}
        window['workspaces_' + {{ widgetInstance.getId() }}] = {{ workspacesList|json_encode|raw }}
        window['session-event-users-status_' + {{ widgetInstance.getId() }}] = {{ sessionEventUsersStatus|json_encode|raw }}
    </script>
{% endblock %}
