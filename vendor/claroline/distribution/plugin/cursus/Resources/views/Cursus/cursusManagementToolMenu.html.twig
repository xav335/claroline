{% extends "ClarolineCoreBundle:Administration:layout.html.twig" %}

{% block title %}
    {{ 
        parent() ~
        ' - ' ~
        'claroline_cursus_tool' | trans({}, 'tools')
    }}
{% endblock %}

{% block breadcrumb %}
    {{
        macros.breadcrumbs([
            {
                'icon': 'fa fa-cog',
                'name': 'administration'|trans({}, 'platform'),
                'href': path('claro_admin_index')
            },
            {
                'name': 'claroline_cursus_tool'|trans({}, 'tools'),
                'href': ''
            }
        ])
    }}
{% endblock %}

{% block section_content %}
    <div class="panel-heading">
        <h3 class="panel-title">
            {{ 'claroline_cursus_tool'|trans({}, 'tools') }}
        </h3>
    </div>
    <div class="list-group">
        <a href="{{ path('claro_cursus_tool_index') }}" class="list-group-item">
          {{ displayedWords['cursus'] }}
        </a>
        <a href="{{ path('claro_cursus_tool_course_index') }}" class="list-group-item">
          {{ displayedWords['course'] }}
        </a>
    </div>
{% endblock %}