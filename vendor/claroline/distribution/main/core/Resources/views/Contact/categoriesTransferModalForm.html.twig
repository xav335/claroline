<div id="modal-categories-transfer-form"
     class="modal-dialog"
     role="dialog"
     aria-labelledby="modalLabel"
     aria-hidden="true"
 >
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                &times;
            </button>
            <h3 class="modal-title">
                {{ 'add_contact_to_category'|trans({}, 'platform') }}
            </h3>
        </div>
        <div class="modal-body">
            <form id="categories-transfer-form"
                  action="{{ path('claro_contact_categories_transfer', {'user': contact.getId()}) }}"
                  method="POST"
                  {{ form_enctype(form) }}
            >
                {{ form_widget(form) }}
            </form>
        </div>
        <div class="modal-footer">
            <span class="btn btn-default" data-dismiss="modal">
                {{ 'cancel'|trans({},'platform') }}
            </span>
            <button type="submit" id='transfer-btn' class="btn btn-primary">
                {{ 'ok'|trans({},'platform') }}
            </button>
        </div>
    </div>
</div>
