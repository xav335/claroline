{% extends 'ClarolineCoreBundle:Desktop:layout.html.twig' %}

{% macro renderSearchedContactsPager(pager, search, max, orderedBy, order) %}
{{
    pagerfanta(
        pager,
        'twitter_bootstrap_translated',
        {
            'proximity' : 1,
            'routeName': 'claro_my_contacts_tool_index',
            'routeParams': {
                'search': search,
                'max': max,
                'orderedBy': orderedBy,
