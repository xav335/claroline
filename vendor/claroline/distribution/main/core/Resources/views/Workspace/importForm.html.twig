{% extends "ClarolineCoreBundle:WorkspaceTag:layout.html.twig" %}

{% block title %}{{ parent() ~ ' - ' ~ "workspace.create" | trans({}, "platform") | striptags | raw }}{% endblock %}

{% block breadcrumb %}
    {{
        macros.breadcrumbs([
            {
                'icon': 'fa fa-book',
                'name': 'workspaces'|trans({}, 'platform'),
                'href': path('claro_workspace_list')
            },
            {
                'name': 'creation'|trans({}, 'platform'),
                'href': ''
            }
        ])
    }}
{% endblock %}

{% block section_content %}
    <div class="panel-heading">
        <h3 class="panel-title">{{ 'import'|trans({}, 'platform') }}</h3>
    </div>
    <form role="form" class="form-horizontal" id="ws_import_form" action="{{ path('claro_workspace_import') }}" method="post" {{ form_enctype(form) }}>
        <div class="panel-body">
            {{ form_errors(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.code) }}
            {{ form_row(form.workspace) }}
            <div>
                <a data-toggle="collapse"
                   class="margin-bottom-md pull-right"
                   href="#advanced-parameters"
                >
                    {{ 'advanced_parameters'|trans({}, 'platform') }}
                    <i class="fa fa-chevron-down"></i>
                </a>
                <br>
                <br>
                <div id="advanced-parameters" class="collapse">
                    <br>
                    {{ form_rest(form) }}
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <button type="submit" class="btn btn-primary">{{ 'ok'|trans({}, 'platform') }}</button>
            <a class="btn btn-default" href="{{ path('claro_workspace_list') }}" role="button">
                {{ 'cancel'|trans({}, 'platform') }}
            </a>
        </div>
    </form>
{% endblock %}
