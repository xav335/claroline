{% extends 'ClarolineCoreBundle:Resource/logs:layout.html.twig' %}

{% set routeParams = filter|merge({'node': _resource.resourceNode.id}) %}
{% block section_content %}
    {% set filterFormAction = path('claro_resource_logs_by_user', {'node': _resource.resourceNode.id}) %}
    {% set pagination %}
        {{
        pagerfanta(
        pager,
        'twitter_bootstrap_translated',
        {
            'proximity' : 1,
            'routeName': 'claro_resource_logs_by_user_paginated',
            'routeParams': routeParams
        }
        )
        }}
    {% endset %}

    {% include 'ClarolineCoreBundle:Log:tool_view_by_user_list.html.twig' with {'filterFormAction': filterFormAction, 'pagination': pagination, 'isDesktop': false} %}
{% endblock %}