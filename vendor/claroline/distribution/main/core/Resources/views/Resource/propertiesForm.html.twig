<div class='modal-dialog'>
    <form role="form" novalidate="novalidate"
          action="{{ path('claro_resource_edit_properties', {'node': nodeId}) }}"
          method="post" {{ form_enctype(form) }}
          id="resource-properties-form"
          class="modal-content">
        <div class='modal-header'>
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">{{ 'properties' | trans({}, 'platform') }}</h4>
        </div>
        <div class="modal-body  tab-content">
            {{ form_errors(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.newIcon) }}
            {{ form_row(form.creationDate) }}
            {{ form_row(form.modificationDate) }}
            {{ form_row(form.resourceType) }}
            {{ form_row(form.creator) }}
            <hr>
            {{ form_row(form.published) }}
            <div class="form-group row">
                {{ form_label(form.publishedToPortal) }}
                <div class="col-md-3">
                    {{ form_widget(form.publishedToPortal) }}
                    <i class="fa fa-question-circle text-info" data-toggle="tooltip" data-placement="top" style="font-size: 1.4em; cursor: help;" title="{{ 'published_to_portal_message'|trans({}, 'platform') }}"></i>
                </div>
            </div>
            {{ form_row(form.accessibleFrom) }}
            {{ form_row(form.accessibleUntil) }}
            <hr>
            {{ form_rest(form) }}

            {% if isDir %}
                <input id="recursive-option" name="isRecursive" type="checkbox"/> {{ 'recursive_dir_action'|trans({}, 'platform')}}
            {% endif %}
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'cancel'|trans({}, 'platform') }}</button>
            <button type="submit" class="btn btn-primary">{{ 'ok'|trans({}, 'platform') }}</button>
        </div>
    </form>
</div>
