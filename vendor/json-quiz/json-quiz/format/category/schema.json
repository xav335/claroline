{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "The unique identifier of the category"
    },
    "name": {
      "type": "string",
      "description": "The name of the category"
    },
    "default": {
      "type": "boolean",
      "description": "Is it the default user category ?",
      "default": false
    }
  },
  "required": ["id", "name"]
}
